<Window x:Class="PetsRUs.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment" Height="300" Width="400">
    <Grid Margin="20">
        <!-- Payment ID -->
        <TextBlock Text="Payment ID: " VerticalAlignment="Top" Margin="0,56,0,0"/>
        <TextBlock x:Name="txtPaymentID" Grid.Column="1" VerticalAlignment="Center" Margin="10,10"/>

        <!-- Total Amount -->
        <TextBlock Text="Total Amount: " VerticalAlignment="Top" Margin="0,35,0,0"/>
        <TextBlock x:Name="txtTotalAmount" VerticalAlignment="Top" Margin="81,35,5,0"/>

        <!-- Payment Method -->
        <TextBlock Text="Payment Method: " VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbPaymentMethod" Width="150" VerticalAlignment="Top" Margin="105,16,105,0">
            <ComboBoxItem Content="Cash"/>
            <ComboBoxItem Content="Card"/>
        </ComboBox>

        <!-- Payment Amount (for Cash payment) -->
        <TextBlock x:Name="lblPaymentAmount" Text="Payment Amount: " VerticalAlignment="Top" Margin="0,135,0,0"/>
        <TextBox x:Name="txtPaymentAmount" VerticalAlignment="Top" Margin="49,152,49,0"/>

        <!-- Pay Button -->
        <Button x:Name="btnPay" Content="Pay" HorizontalAlignment="Center" Margin="0,182,0,24" Click="btnPay_Click" Width="120"/>
    </Grid>
</Window>
