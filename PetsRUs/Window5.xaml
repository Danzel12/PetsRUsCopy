<Window x:Class="PetsRUs.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window5" Height="450" Width="800">
    <Grid>

        <ListView x:Name="petSupplyListView" Margin="10,10,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Supplies ID" DisplayMemberBinding="{Binding Supplies_ID}"/>
                    <GridViewColumn Header="Supplies Name" DisplayMemberBinding="{Binding Supplies_Name}"/>
                    <GridViewColumn Header="Supply Category" DisplayMemberBinding="{Binding Supply_Category}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}"/>
                    <GridViewColumn Header="Action">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Add to Cart" Click="Add_to_cart_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Show Cart" Click="ShowCart_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>
